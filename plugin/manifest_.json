{
    "name":"plugin final",
    "description":"plugin and server",
    "version":"1.0",
    "manifest_version":2,
    
    "content_scripts": [

        {
            "matches":[
                "*://www.il.kayak.com/flights/*"  
            ],
            "js": ["content.js"],
            "html": ["extention.html"]
        }
    ],
    "background": {
        "scripts": [
            "./content.js"
        ]
    },    
    "web_accessible_resources": [
        "./extention.html"
    ],
    "browser_action": {
        "default_popup":"popup.html",
        "default_title": "Welcome to out project"
    },
    "permissions": [
        "activeTab",
        "tabs",
        "https://www.il.kayak.com/flights/*",
        "http://www.il.kayak.com/flights/*",
        "storage"
    ]
    
}