{
    "name":"plugin final",
    "description":"plugin and server",
    "version":"1.0",
    "manifest_version":3,
    
    "content_scripts": [

        {
            "matches":[
                "*://www.il.kayak.com/flights/*"  
            ],
            "js": ["content.js"]
            
        }
    ],

    "background": {
        "service_worker": "/content.js"
    },    
    
    "host_permissions": [
        "https://www.il.kayak.com/flights/*",
        "http://www.il.kayak.com/flights/*"
    ],

    "permissions": [
        "activeTab",
        "tabs",
        "storage"
    ]
    
}